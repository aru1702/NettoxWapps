<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HrvScanActivity"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        app:cardBackgroundColor="#50FFFFFF"
        app:cardCornerRadius="1dp">

        <TextView
            android:id="@+id/textV_scan_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/scanattention"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/imageV_scan_line"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/line" />

    <ImageView
        android:id="@+id/imageV_scan_btnAnalyze"
        android:layout_width="340dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/btn_analyze_long" />
</LinearLayout>