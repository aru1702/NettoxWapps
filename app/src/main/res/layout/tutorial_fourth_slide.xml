<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSlide4"
    android:padding="8dp">

    <TextView
        android:id="@+id/slide4_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="8dp"
        android:text="Get know more on help menu"
        android:textAlignment="center"
        android:textColor="@color/colorSlide"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/slide4_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slide4_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="8dp"
        android:text="Still getting lost? Don't worry, we always by your side! Just check up the Help Menu and you can found me again there. "
        android:textAlignment="center"
        android:textColor="@color/colorSlide"
        android:textSize="20sp" />
</RelativeLayout>